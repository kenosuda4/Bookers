<h1>Books</h1>
<table>
 <tr>
  <th>Title</th>
  <th>Body</th>
 </tr>
 <tr>
  <td>
   <%= @book.title %>
  </td>
  <td>
   <%= @book.body %>
  </td>
</tr>

</table>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <p><%= f.submit 'create book' %><p>
 
<% end %>
